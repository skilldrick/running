<h1>Listing runs</h1>

<table>
  <tr>
    <th>Distance</th>
    <th>Avg pace</th>
    <th>Run ID</th>
  </tr>

<% @runs.each do |run| %>
  <tr>
    <td><%=h run.distance.to_s %></td>
    <td><%=h run.avg_pace %></td>
    <td><%=h run.run_id %></td>
    <td><%= link_to 'Show', run %></td>
    <td><%= link_to 'Edit', edit_run_path(run) %></td>
    <td><%= link_to 'Destroy', run, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New run', new_run_path %>

<p><%= @run %></p>
<p><%= @all_runs %></p>
